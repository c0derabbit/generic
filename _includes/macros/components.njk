{% macro link(link, secondary) %}
  <a
    class="btn btn-lg mr-2 {% if secondary %} btn-secondary{% endif %}"
    href="{{ link.url }}"
    {% if link.newTab %}
      target="_blank"
      rel="noopener noreferrer"
    {% endif %}
  >
    {{ link.text }}
  </a>
{% endmacro %}

{% macro hero(data) %}
  <section>
    <div class="container">
      <div class="col-span-6 md:mt-8">
        <h1 class="text-5xl mb-8 leading-none">{{ data.title }}</h1>
        <p class="text-xl font-light">{{ data.text }}</p>
        <div class="mt-10">
          {{ link(data.cta) }}
          {% if data.secondaryCta %}
            {{ link(data.secondaryCta, true) }}
          {% endif %}
        </div>
      </div>

      <img class="col-span-6" src="{{ data.image.url }}" />
    </div>
  </section>
{% endmacro %}

{% macro features(data) %}
  <section class="bg-gray-100">
    <h2 class="text-3xl col-span-12">
      {{ data.title }}
      <div class="bg-indigo-100"></div>
    </h2>
    {% for item in data.items %}
      <div class="col-span-6">
        <h3 class="mb-4 text-xl font-semibold">
          {{ item.title }}
        </h3>
        <p class="mb-4">{{ item.text }}</p>
        <a class="btn btn-secondary" href="{{ item.cta.url }}">
          {{ item.cta.text }}
        </a>
      </div>
    {% endfor %}
  </section>
{% endmacro %}

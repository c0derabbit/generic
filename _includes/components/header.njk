{% macro navlink(title, url) %}
  <a
    href="{{ url| url }}"
    class="link mx-4
      {% if page.url === url %}
        font-semibold
      {% endif %}
    "
  >
    {{ title }}
  </a>
{% endmacro %}

<header class="max-w-6xl mx-auto p-4 flex justify-between items-center">
  <h1>
    <a href="{{ '/' | url }}" class="flex items-center">
      <img src="{{ navigation.logo.url }}" alt="" class="inline mr-1 h-8" />
      {% if navigation.showSiteName %}{{ navigation.siteName }}{% endif %}
    </a>
  </h1>
  <nav>
    {% for link in navigation.header %}
      {{ navlink(link.text, link.url) }}
    {% endfor %}
  </nav>
  <button class="btn">
    Click me
  </button>
</header>
